#!/bin/bash

# Pre-commit hook to validate plugin versions
# This ensures marketplace.json versions match plugin.json versions before committing

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo ""
echo -e "${YELLOW}üîç Running version validation...${NC}"

# Run the validation script
node scripts/validate-versions.js

# Check exit code
if [ $? -ne 0 ]; then
    echo ""
    echo -e "${RED}‚ùå Commit blocked: Version validation failed!${NC}"
    echo -e "${YELLOW}Please fix the version mismatches before committing.${NC}"
    echo ""
    exit 1
fi

echo -e "${GREEN}‚úÖ Version validation passed!${NC}"
echo ""
exit 0
