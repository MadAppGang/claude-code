# Autopilot Plugin Environment Variables
# Copy this file to .env and fill in your values

# Required: Linear API Key
# Get this from: Linear Settings > API > Personal API Keys
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxx

# Required: Linear Webhook Secret
# Generate this when creating a webhook in Linear
LINEAR_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# Required: Autopilot Bot User ID
# Your Linear user ID (query via API: { viewer { id } })
AUTOPILOT_BOT_USER_ID=user_xxxxxxxxxxxxx

# Optional: Webhook Server Port (default: 3001)
AUTOPILOT_WEBHOOK_PORT=3001

# Optional: Max Feedback Iterations (default: 5)
AUTOPILOT_MAX_FEEDBACK_ROUNDS=5

# Optional: Confidence Threshold for Auto-approval (default: 95)
AUTOPILOT_CONFIDENCE_THRESHOLD=95
