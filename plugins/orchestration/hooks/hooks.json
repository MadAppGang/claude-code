{
	"description": "Orchestration plugin - multi-model validation, session management, and statistics tracking",
	"hooks": {
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/session-start.sh",
						"timeout": 10
					}
				]
			}
		],
		"SubagentStop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-statistics.sh",
						"timeout": 15
					}
				]
			}
		],
		"PreToolUse": [
			{
				"matcher": "Task",
				"hooks": [
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-launch-check.sh",
						"timeout": 10
					},
					{
						"type": "command",
						"command": "${CLAUDE_PLUGIN_ROOT}/hooks/validate-proxy-mode.sh",
						"timeout": 10
					}
				]
			}
		]
	}
}
