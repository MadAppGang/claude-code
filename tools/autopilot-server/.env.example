# Autopilot Server Configuration
# Copy to .env and fill in your values

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxx

# Optional: Linear integration
LINEAR_API_KEY=lin_api_xxxxxxxxxxxxx
LINEAR_TEAM_ID=your-team-id
LINEAR_WEBHOOK_SECRET=your-webhook-secret

# Optional: Bot user ID (tasks assigned to this user are auto-processed)
AUTOPILOT_BOT_USER_ID=

# Server configuration
AUTOPILOT_PORT=3456
AUTOPILOT_HOST=0.0.0.0
AUTOPILOT_DATA_DIR=./data

# Working directory for Claude Code execution
# Claude will load CLAUDE.md, plugins, and project settings from this directory
AUTOPILOT_WORKING_DIR=/path/to/your/project

# Worker pool configuration
AUTOPILOT_MAX_CONCURRENT=3
AUTOPILOT_MAX_QUEUE_SIZE=1000
AUTOPILOT_RETRY_ATTEMPTS=3
AUTOPILOT_RETRY_DELAY_MS=5000

# Model to use for task execution
AUTOPILOT_MODEL=claude-sonnet-4-20250514

# Development mode (bypasses some security checks)
AUTOPILOT_DEV_MODE=false

# Logging
LOG_LEVEL=info
